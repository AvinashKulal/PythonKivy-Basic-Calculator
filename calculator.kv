                    root.raw_data +='0'
            MDFillRoundFlatButton:
                text:"."
                size_hint_x:None
                height:50
                md_bg_color:0.3,0.3,0.3,1
                font_size:25
                bold:True
                on_release:
                    root.textbox1.text+='.'
                    root.raw_data +='.'
            MDFillRoundFlatButton:
                text:"="
                size_hint_x:None
                height:50
                md_bg_color:0.3,1,0.3,.3
                font_size:25
                bold:True
                on_release:
                    root.doCalculation(root.raw_data) if root.textbox1.text!='' else None

            MDFillRoundFlatButton:
                text:"+"
                size_hint_x:None
